<UserControl
    x:Class="Kelly.App.UserControls.SettingsCtrl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:DesignHeight="700"
    d:DesignWidth="400">
    <Grid Style="{StaticResource LayoutRootStyle}">
        <StackPanel Width="346" Margin="20,100,0,0">
            <TextBlock x:Uid="SettingsCtrl_VoteTitleHeader" 
                   TextWrapping="Wrap" Text="TextBlock" VerticalAlignment="Top" Style="{StaticResource GroupHeaderTextStyle}"/>
            <TextBox 
                x:Name="voteTitleTextBox"
            TextWrapping="Wrap" Text="{Binding Title, Mode=TwoWay}" Margin="0,20,0,0" 
                KeyUp="voteTitleTextBox_KeyUp"
            />

        </StackPanel>
    </Grid>
</UserControl>
